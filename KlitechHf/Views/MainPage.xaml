<Page
    x:Class="KlitechHf.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KlitechHf"
    xmlns:vm="using:KlitechHf.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="using:Prism.Windows.Mvvm"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
    d:DataContext="{d:DesignInstance vm:MainPageViewModel}">

    <RelativePanel>

        <Button Content="TestLoginAsync"
                x:Name="LoginAsyncButton"
                Command="{Binding LoginCommand}"
                IsEnabled="{Binding LoginButtonEnabled, Mode=TwoWay}"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignVerticalCenterWithPanel="True"/>

        <Button Content="Logout"
                x:Name="LogoutButton"
                Command="{Binding LogoutCommand}"
                RelativePanel.AlignHorizontalCenterWith="LoginAsyncButton"
                RelativePanel.Below="LoginAsyncButton"/>

        <Button Content="ListChildrenTest"
                Click="ButtonBase_OnClick"
                RelativePanel.Below="LogoutButton"
                RelativePanel.AlignHorizontalCenterWith="LogoutButton"/>

    </RelativePanel>
</Page>
